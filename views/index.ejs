<!DOCTYPE html>
<html lang="pt=br">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="/css/style.css" rel="stylesheet" />
    <title>Document</title>
  </head>
  <body>
    <%- include('./partials/header.ejs') %>

    <main>
      <section id="cards">
        <% pokedex.forEach(pokemon => { %>
          <a href="/detalhes/<%= pokemon.id %> ">
        <article class="card">
          
          <p class="id">#0<%= pokemon.id %> </p>
          <img src="<%= pokemon.imagem %> " alt="imagem de um pokemon" />
          
          
          <p class="name"><%= pokemon.nome %></p>
          <p class="desc">Tipo: <%= pokemon.tipo %></p>
          <p class="desc">Altura: <%= pokemon.altura %></p>
          <p class="desc">Peso: <%= pokemon.peso %></p>
          
          
        </article>
      </a>
        <% }) %>
      </section>

      
     

    <%- include('./partials/footer.ejs') %> 
  </body>
</html>
